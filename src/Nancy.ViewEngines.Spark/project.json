{
    "version": "2.0.0-*",
    "description": "Enables using the Spark view engine with Nancy.",
    "authors": [ "Andreas Håkansson, Steven Robbins and contributors" ],
    "tags": [ "Nancy", "View Engine", "Spark" ],
    
    "packOptions": {
        "projectUrl": "http://nancyfx.org",
        "licenseUrl": "https://github.com/NancyFx/Nancy/blob/master/license.txt",
        "iconUrl": "http://nancyfx.org/nancy-nuget.png"
    },

    "dependencies": {
        "Nancy": { "target": "project" },
        "Spark": "1.7.0"
    },

    "frameworks": {
        "net452": {
            "frameworkAssemblies": {
                "System.Configuration": { "type": "build" },
                "System.Web": { "type": "build" }
            }
        }
    }
}
